{
  "name": "@boostercloud/framework-common-helpers",
  "version": "0.30.4",
  "description": "Contains Booster common helpers used by the core and provider packages",
  "keywords": [
    "framework-common-helpers"
  ],
  "author": "Booster Cloud",
  "homepage": "https://booster.cloud",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/boostercloud/booster.git"
  },
  "bugs": {
    "url": "https://github.com/boostercloud/booster/issues"
  },
  "dependencies": {
    "@boostercloud/framework-types": "*",
    "child-process-promise": "^2.2.1",
    "tslib": "2.4.0"
  },
  "devDependencies": {
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "7.1.5",
    "@types/child-process-promise": "2.2.2",
    "@types/mocha": "9.1.1",
    "@types/rewire": "^2.5.28",
    "@types/sinon": "10.0.13",
    "@types/sinon-chai": "3.2.8",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "eslint": "7.26.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.4.0",
    "nyc": "15.1.0",
    "prettier": "2.3.0",
    "rewire": "5.0.0",
    "sinon": "14.0.0",
    "sinon-chai": "3.7.0",
    "ttypescript": "1.5.13",
    "typescript": "4.7.4"
  },
  "scripts": {
    "format": "prettier --write --ext '.js,.ts' **/*.ts **/*/*.ts",
    "lint:check": "eslint --ext '.js,.ts' **/*.ts",
    "lint:fix": "eslint --quiet --fix --ext '.js,.ts' **/*.ts",
    "build": "tsc -b tsconfig.json",
    "clean": "rimraf ./dist tsconfig.tsbuildinfo",
    "prepack": "tsc -b tsconfig.json",
    "test:core": "npm run test",
    "test": "cross-env BOOSTER_ENV=test npx nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\""
  }
}
